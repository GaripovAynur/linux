#Add new disk
fdisk /dev/sdc ### n w
mkfs -t ext4 /dev/sdc1
mount -t ext4 /dev/sdc1 /opensearch
blkid
UUID=577bc574-7bfb-4672-b969-45e5dc0c0cee /opensearch             ext4    defaults      0 0



#Rescan disk (sdc)
df -h
echo 1>/sys/class/block/sdc/device/rescan
fdisk -l
fdisk /dev/sdc ### d n w
partprobe /dev/sdc
resize2fs /dev/sdc1
df -h
